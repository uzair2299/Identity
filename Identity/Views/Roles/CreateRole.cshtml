@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>Create Role</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form asp-action="CreateRole" asp-controller="Roles" method="post">
                <h4>Create Role</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="5" asp-for="Description" class="form-control"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary d-block">Create Role</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="Role-List" asp-action="Index" asp-controller="Roles">Get Roles List</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>