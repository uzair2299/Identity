@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    int Counter = 0;
}

<h1>Roles List</h1>
<a asp-action="CreateRole" asp-controller="Roles" class="btn btn-dark">Create New Role</a>
@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-dark" role="alert">
        @TempData["ErrorMsg"]
    </div>
}

@{if (Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="card mt-2">
                <div class="card-header">
                    @(++Counter)
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <h6 class="card-title">@item.Description</h6>
                </div>
                <div class="card-footer">
                    <a class="btn btn-dark" asp-action="EditRole" asp-controller="Roles" asp-route-Id="@item.Id">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card mt-2 text-center">
            <div class="card-body">
                <h5 class="card-title">There is no Roles to Show</h5>
            </div>
            <hr />
            <div class="card-body">
                <h5 class="card-title">Use the button below to create a role</h5>
                <a asp-action="CreateRole" asp-controller="Roles" class="btn btn-dark">Create Role</a>
            </div>
        </div>
    }

} 